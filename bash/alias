# <<< aliases
alias +='pushd .'
alias -- -='popd'
alias ..='cd ..'
alias ...='cd ../..'
alias cd..='cd ..'
alias dir='ls -l'
alias l='ls -alF'
alias la='ls -la'
alias ll='ls -l'
alias ls-l='ls -l'
alias md='mkdir -p'
alias open='xdg-open'

# ssh
alias gof='ssh -YCAt ineichen@llcx.psi.ch ssh -YCA ineichen@felsim00.psi.ch'
alias goy='ssh -YCA iff@yvesineichen.com'
alias goo='ssh -YC ineichen@obiwan.ethz.ch'
alias authpsi='ssh -o PreferredAuthentications=password -o ServerAliveInterval=60 -f -N ineichen@balrog.psi.ch'

# sshfs
alias mf='sshfs ineichen@felsim00: ~/mnt/felsim'
alias umf='fusermount -u ~/mnt/felsim'
alias my='sshfs iff@yvesineichen.com: ~/mnt/yvesineichen'
alias umy='fusermount -u ~/mnt/yvesineichen'
